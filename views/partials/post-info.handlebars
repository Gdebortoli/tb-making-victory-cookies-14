<article class="post">
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{title}}</a>
    <span>({{post_content}})</span>
  </div>
  <div class="meta">
    <p>Posted by {{user.username}} on {{format_date created_at}}
        {{#if comments.length}}
        | {{comments.length}} comment(s)</p>
        {{/if}}
  </div>
</article>